<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppQuantidade.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        <Label Text="Quantidade" FontSize="40" TextColor="Brown" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
        <Label x:Name="lblQuantidade" Text="1" FontSize="48" TextColor="Blue" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Clicked="Aumentar" Text="+" FontSize="48" BorderWidth="1" TextColor="Yellow" BorderColor="#707070" BackgroundColor="Gray" WidthRequest="90" HeightRequest="90"/>
            <Button Clicked="Diminuir" Text="-" FontSize="48" BorderWidth="1" TextColor="Yellow" BorderColor="#707070" BackgroundColor="Gray" WidthRequest="90" HeightRequest="90"/>
        </StackLayout>
        <Button  Clicked="Button_Clicked" Text="Sair" FontSize="30" BorderWidth="1" TextColor="Red" FontAttributes="Bold" />

        </StackLayout>

</ContentPage>
